{% extends 'baseadmin.html.twig' %}
{% block body %}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1><a href={{ path('patient_create') }}>
                    <button type="button" class="btn btn-success"><i class="fa fa-users fa-fw"></i> Add Patient</button>
                </a></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTables-example">
                            <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Date of Birth</th>
                                <th>BSN</th>
                                <th>Therapist</th>
                                <th></th>
                                <th>Profile</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for patients in patient %}
                            <tr class="odd gradeX">
                                <td>Tim</td>
                                <td>Kross</td>
                                <td>07/08/2016</td>
                                <td>123456789</td>
                                <td>Tim Kross</td>
                                <td class="text-center"><input type="checkbox"></td>
                                <td class="text-center">
                                    <a><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a> |
                                    <a><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a> |
                                    <a><i class="fa fa-user fa-lg" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
{% endblock %}
{% block stylesheets %}
{% endblock %}
